package com.londonhydro.api.inject;

import com.google.inject.Binder;
import com.google.inject.Module;


public class MainGuiceModule implements Module
{

    @Override public void configure(Binder binder)
    {
        // binder.install(new UtilsGuiceModule());
        binder.install(new OrmGuiceModule());
        binder.install(new ApiGuiceModule());
        // binder.install(new JobsGuiceModule());
        // binder.install(new ApiCacheModule());
    }
}
